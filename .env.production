# Houston EJ-AI Platform - Production Environment Configuration
# PRODUCTION SETTINGS - DO NOT USE IN DEVELOPMENT

NODE_ENV=production

# Database Configuration (Production TimescaleDB)
DB_HOST=production-timescaledb.amazonaws.com
DB_PORT=5432
DB_NAME=houston_ej_ai_prod
DB_USER=houston_prod
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION
DB_SSL=true
DB_MAX_CONNECTIONS=20

# Redis Configuration (Production)
REDIS_HOST=production-redis.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_IN_PRODUCTION
REDIS_TLS=true

# Blockchain Configuration (Production Polygon)
BLOCKCHAIN_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_PROJECT_ID
COMPENSATION_PRIVATE_KEY=CHANGE_ME_IN_PRODUCTION
COMPENSATION_CONTRACT_ADDRESS=0x_PRODUCTION_CONTRACT_ADDRESS

# API Configuration (Production)
FRONTEND_URL=https://houston-ej-ai.org
BACKEND_URL=https://api.houston-ej-ai.org
API_BASE_URL=https://api.houston-ej-ai.org

# Security Configuration
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_LONG_RANDOM_STRING
ENCRYPTION_KEY=CHANGE_ME_IN_PRODUCTION_32_CHAR_KEY
API_RATE_LIMIT=1000
SESSION_SECRET=CHANGE_ME_IN_PRODUCTION

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
DATADOG_API_KEY=CHANGE_ME_IN_PRODUCTION

# External Services
SENDGRID_API_KEY=CHANGE_ME_IN_PRODUCTION
AWS_ACCESS_KEY_ID=CHANGE_ME_IN_PRODUCTION
AWS_SECRET_ACCESS_KEY=CHANGE_ME_IN_PRODUCTION
AWS_REGION=us-east-1

# Performance
CACHE_TTL=300
MAX_REQUEST_SIZE=10mb
COMPRESSION_LEVEL=6

# Feature Flags
ENABLE_BLOCKCHAIN=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ADVANCED_ANALYTICS=true