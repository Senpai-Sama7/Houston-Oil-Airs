    "three": "^0.158.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/three": "^0.158.0",
    "@vitejs/plugin-legacy": "^7.2.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "lighthouse": "^12.8.2",
    "playwright": "^1.40.0",
    "prettier": "^3.1.0",
